<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<display-name>Json Echo</display-name>
		<servlet-name>JsonEchoServlet</servlet-name>
		<servlet-class>com.sandbox.performance.netty.tomcat.base.servlet.JsonEchoServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>JsonEchoServlet</servlet-name>
		<url-pattern>/echo</url-pattern>
	</servlet-mapping>

</web-app>